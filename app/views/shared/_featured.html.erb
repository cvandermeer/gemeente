<% if featured.present? %>
  <div class='featured content-wrapper'>
    <div class='container'>
      <h3>Aanbevolen</h3>
      <div class='row'>
        <% featured.each do |feature| %>
          <div class='columns three feature'>
            <%= image_tag feature.image(:feature), class: 'u-max-full-width' %>
            <h3>
              <%= link_to feature.title, feature, target: '_blank' %>
            </h3>
            <span class='date'><%= feature.created_at %></span>
            <p><%= feature.description.truncate(26, separator: ' ') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
