<header>
  <div class='row'>
    <div class='three columns'>
      <h1>
        <%= link_to 'IkBenInwoner', root_path, class: 'logo', data: { no_turbolink: true } %>
      </h1>
      <div class='version'><%= Application::VERSION %></div>
    </div>
    <div class='nine columns'>
      <nav>
        <ul>
          <li>
            <div class='hamburger'>
              <span></span>
              <span></span>
              <span></span>
            </div>
          </li>
          <li>
            <%= link_to 'Melding aanmaken', new_report_path, class: 'js_modal button button-primary', remote: true %>
          </li>
          <% if user_signed_in? %>
          <li>
            <%= link_to 'Uitloggen', destroy_user_session_path, method: 'delete', class: 'pull-right' %>
          </li>
          <li>
            <%= link_to 'Profiel', user_path(current_user), data: { no_turbolink: true } %>
          </li>
          <% else %>
          <li>
            <%= link_to 'Inloggen', new_user_session_path, remote: true, class: 'js_modal' %>
          </li>
          <li>
            <%= link_to "Aanmelden", new_user_registration_path, remote: true, class: 'js_modal' %>
          </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
