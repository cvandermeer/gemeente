<div class='panel'>
  <div class='panel-header'>
    <h5>Gemeente volgen</h5>
  </div>
  <div class='panel-body'>
    <% if community_list.any? %>
      <%= form_for community_subscription do |f| %>
        <div class='row select'>
          <%= f.collection_select :community_id, community_list, :id, :name, {include_blank: 'Kies een Gemeente'}, {class: 'js_init_select'} %>
          <%= f.submit 'Gemeente toevoegen' %>
        </div>
      <% end %>
    <% end %>

    <ul>
      <% current_user.community_subscriptions.each do |subscription, id| %>
        <li>
          <%= subscription.community.name %>
          <%= link_to 'Verwijderen', delete_community_subscription_path(subscription.id), data: { remote: true },
                                                                                          class: 'fa fa-trash-o js_modal' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
