<div class='panel'>
  <div class='panel-header'>
    <h5>Gemeente volgen</h5>
  </div>
  <div class='panel-body'>
    <% if community_list.any? %>
      <%= form_for community_subscription do |f| %>
        <div class='row'>
          <div class='columns four'>
            <%= f.collection_select :community_id, community_list, :id, :name, {include_blank: 'Kies een Gemeente'}, {class: 'js_init_select'} %>
            <%= f.submit 'Gemeente toevoegen', class: 'button-primary u-full-width' %>
          </div>
          <div class='columns u-pull-right six'>
            <% current_user.community_subscriptions.each do |subscription, id| %>
              <div class='subscription'>
                <%= subscription.community.name %>
                <%= link_to 'Niet volgen', delete_community_subscription_path(subscription.id), data: { remote: true },
                                                                                                class: 'remove-subscription js_modal u-pull-right ' %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>


  </div>
</div>
