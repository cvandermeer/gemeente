<%= form_for @event do |f| %>
  <p><%= f.label 'Naam' %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label 'Beschrijving' %></p>
  <p><%= f.text_area :description %></p>
  <p><%= f.label 'Straatnaam' %></p>
  <p><%= f.text_field :street %></p>
  <p><%= f.label 'Huisnummer' %></p>
  <p><%= f.number_field :housenumber %></p>
  <p><%= f.label 'Plaatsnaam' %></p>
  <p><%= f.text_field :town %></p>
  <p><%= f.label '(start)Datum' %></p>
  <p><%= f.date_field :start_date %></p>
  <p><%= f.label 'Einddatum' %></p>
  <p><%= f.date_field :end_date %></p>
  <p><%= f.label 'Starttijd' %></p>
  <p><%= f.time_field :start_time %></p>
  <p><%= f.label 'Eindtijd' %></p>
  <p><%= f.time_field :end_time %></p>
  <p><%= f.submit 'Aanmaken' %></p>
<% end %>