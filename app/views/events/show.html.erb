<h1><%= @event.title %></h1>

<div id="map" class="map"></div>
<script type="text/javascript">
  var lat = <%= @event.latitude %>
  var lon = <%= @event.longitude %>
  var map = new ol.Map({
    target: 'map',
    layers: [
      new ol.layer.Tile({
        source: new ol.source.OSM()
      })
    ],
    view: new ol.View({
      center: ol.proj.transform([lon, lat], 'EPSG:4326', 'EPSG:3857'),
      zoom: 17
    })
  });
</script>