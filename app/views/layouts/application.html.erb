<!DOCTYPE html>
<html>
  <head>
    <title>Gemeente</title>
    <meta name='viewport' content='width=device-width, initial-scale=1, user-scalable=no'>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <% if Rails.env.production? %>
      <script src='https://maps.googleapis.com/maps/api/js?key=AIzaSyC-CJuuFP6eSLUX1g3Osuy9HRfYtMQ6SWA&libraries=places&language=nl&callback=initMap' async defer></script>
    <% else %>
      <script src='https://maps.googleapis.com/maps/api/js?libraries=places&language=nl&callback=initMap' async defer></script>
    <% end %>
  </head>
  <body>

    <div class='outer-wrapper'>
      <%= render 'shared/menu' %>
      <%= render 'shared/side_menu' %>
      <%= render 'shared/notice' %>

      <div class='wrapper'>
        <%= yield %>
      </div>

      <% if action_name == 'index'  %>
        <%= render 'shared/featured', featured: @featured %>
        <%= render 'shared/recent', recents: @recents %>
      <% end %>
      <%= render 'shared/modal' %>

      <%= render 'shared/footer' %>
    </div>

  </body>
</html>
