<h5>Contact Opnemen</h5>
<div class='content-container'>
	<div>
    <%= form_for @message, remote: true do |f| %>
      <div class='row'>
        <div class='four columns'>
          <%= f.label :name, 'Naam' %>
          <%= f.text_field :name, class: 'u-full-width' %>
        </div>
      </div>
      <div class='row'>
        <div class='four columns'>
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email, class: 'u-full-width' %>
        </div>
      </div>
      <div class='row'>
        <div class='columns'>
          <%= f.label :body, 'Bericht' %>
          <%= f.text_area :body, class: 'u-full-width' %>
        </div>
      </div>
      <%= recaptcha_tags %>
      <div class='row'>
        <%= f.submit 'Versturen', class: 'button-primary' %>
      </div>
    <% end %>
  </div>
</div>
