<div id='map' class='map map-show', data-lat='<%= @report.latitude %>', data-lon='<%= @report.longitude %>' ></div>

<% if user_signed_in? %>
  <% if @report.editable_by?(current_user) %>
    <%= link_to 'Aanpassen', edit_report_path(@report), data: {modal_type: 'edit-report',
                                                        report_id: @report.id,
                                                        remote: true},
                                                        class: 'report-btn fa
                                                                fa-pencil-square-o js_side_modal' %>
    <%= link_to 'Verwijderen', delete_report_path(@report), data: { remote: true,
                                                            modal_type: 'destroy',
                                                            modal_element: 'reports' },
                                                            class: 'report-btn fa
                                                                    fa-trash-o js_side_modal' %>
  <% end %>
<% end %>

<div class='inner details'>
  <div class='container'>
    <div class='row'>
      <h1>
        <%= @report.title %>
      </h1>
    </div>

    <div class='row'>
      <div class='side-bar-left columns three'>
        <div class='side-contact'>
          <h3>Contact</h3>
          <ul>
            <li>Gemeente: <%= @report.community_name %></li>
            <li>Straat: <%= @report.address %></li>
            <li>Plaats: <%= @report.town %></li>
          </ul>

          <ul class='contact'>
            <% if @report.community_email != nil %>
              <li>
                <i class="fa fa-envelope"></i>
                <%= mail_to @report.community_email %>
              </li>
            <% end %>
            <% if @report.community_phonenumber != nil %>
              <li>
                <i class="fa fa-mobile"></i>
                <%= @report.community_phonenumber %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
      <div class='columns nine'>
        <% if @report.image(:image_big) != nil %>
          <%= image_tag @report.image(:image_big), class: 'u-max-full-width' %>
        <% end %>
          <h3>Beschrijving</h3>
          <p><%= @report.description %></p>
      </div>
    </div>

    <div class='row pano'>
      <div id='pano'>
      </div>
    </div>
  </div>
</div>
