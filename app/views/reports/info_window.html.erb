<div class='info-box'>
  <div class='close'></div>
  <div class='info'>
    <h3><%= @report.title.truncate(32) %></h3>
    <p>
      <%= @report.description.truncate(100, separator: ' ') %>
    </p>
    <div class='address'>
      <% if user_signed_in? && @report.editable_by?(current_user) %>
        <%= @report.location_detail.truncate(120) %>
      <% else %>
        <%= @report.location.truncate(120) %>
      <% end %>

    </div>
  </div>
  <div class='info-footer <%= @report.status %>'>
    <div class="marker <%= @report.status %>">
        <div class="marker-icon <%= @report.category.title %>">
        </div>
    </div>
    <div class='info-link'>
      <%= link_to '', @report, data: { no_turbolink: true }, target: '_blank', class: 'info-arrow' %>
      <%= link_to 'Melding bekijken', @report, data: { no_turbolink: true }, target: '_blank', class: 'link' %>
    </div>
  </div>
</div>
