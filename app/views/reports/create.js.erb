$('#new_report').on('ajax:success', function() {
  $.ajax({
    type: 'GET',
    dataType: 'json',
    url: '/reports/markers',
    data: { 'id': <%= @report.id %> },
    success: function(data){
      goToReportLocation(data);
      setNotice('Uw melding is ontvangen: ' + data.title);
      removeOldNewMarker();
      removeHeaderModal($('.header-modal'));
    }
  });
});
