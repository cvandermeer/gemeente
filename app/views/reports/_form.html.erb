<%= form_for @report, html: { multipart: true, type: :html }, remote: true do |f| %>

  <div class='row'>
    <div class='six columns'>
      <%= f.label :title, 'Melding titel' %>
      <%= f.text_field :title %>
    </div>
  </div>

  <div class='row street'>
    <div class='eight columns '>
      <%= f.label :address, 'Straat + huisnummer' %>
      <%= f.text_field :address, class: 'u-full-width js_street_input',
          autocomplete: "off", data: { el_name: 'street' }  %>
    </div>
  </div>

  <div class='row'>
    <div class='eight columns'>
      <%= f.label :town, 'Plaatsnaam' %>
      <%= f.text_field :town, class: 'u-full-width js_town_input',
          autocomplete: "off", data: { el_name: 'town' } %>
    </div>
  </div>

  <div class='row'>
    <div class='columns'>
      <%= f.label :description, 'Beschrijving' %>
      <%= f.text_area :description, class: 'u-full-width' %>
    </div>
  </div>

  <% if action_name == 'edit' %>
    <div class='row'>
      <div class='four columns'>
        <%= f.label :resolved_at, 'Opgelost op' %>
        <%= f.text_field :resolved_at, class: 'u-full-width', class: 'datepicker' %>
      </div>
    </div>
  <% end %>

  <div class='row'>
    <div class='four columns'>
      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'u-full-width' %>
    </div>
  </div>

  <div class='row'>
    <%= f.label :image_one, 'Afbeeldingen toevoegen' %>
    <%= f.file_field :image_one %>
    <%= f.file_field :image_two %>
    <%= f.file_field :image_three %>
    <br><br>
  </div>

  <div class='row'>
    <%= f.submit 'Aanmaken', class: 'button-primary trigger_loading' %>
  </div>
<% end %>
