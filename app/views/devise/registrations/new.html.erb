<h5>Aanmelden</h5>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, class: 'u-full-width' %>

  <%= f.label :wachtwoord %>
  <% if @minimum_password_length %>
    <em>(minimaal <%= @minimum_password_length %> karakters)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: 'off', class: 'u-full-width' %>

  <%= f.label :wachtwoord_bevestiging %><br />
  <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'u-full-width' %>

  <%= f.submit 'Aanmelden', class: 'button button-primary' %>

<% end %>

<%= render 'devise/shared/links' %>
