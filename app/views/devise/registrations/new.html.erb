<div class='register-modal'>
  <div class='close-modal js_close_modal'></div>
  <h5>Aanmelden</h5>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: 'Email adres', class: 'u-full-width' %>

    <% if @minimum_password_length %>
      <em>(minimaal <%= @minimum_password_length %> karakters)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Wachtwoord', class: 'u-full-width' %>

    <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Wachtwoord bevestiging', class: 'u-full-width' %>

    <%= f.text_field :name, placeholder: 'Voornaam & achternaam', class: 'u-full-width' %>
    <em>Staat en woonplaats zijn optineel</em>
    <%= f.text_field :address, placeholder: 'Straat & huisnummer', class: 'u-full-width' %>
    <%= f.text_field :town, placeholder: 'Woonplaats', class: 'u-full-width' %>

    <%= f.submit 'Registreren', class: 'button button-primary u-full-width' %>

  <% end %>

  <%= render 'devise/shared/links' %>
</div>
