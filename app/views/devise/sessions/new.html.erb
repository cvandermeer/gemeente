<div class='header-modal login-modal'>
  <div class='close-modal js_close_modal'></div>
  <h5>Inloggen</h5>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.email_field :email, autofocus: true, placeholder: 'Email adres',  class: 'u-full-width' %>
    <%= f.password_field :password, autocomplete: 'off', placeholder: 'Wachtwoord', class: 'u-full-width' %>

    <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Onthoud mij' %>
    <% end %>

    <%= f.submit 'Inloggen', class: 'button button-primary u-full-width' %>

  <% end %>

  <%= render 'devise/shared/links' %>
</div>
