<h4>Inloggen</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, class: 'u-full-width' %>

  <%= f.label :password %>
  <%= f.password_field :password, autocomplete: "off", class: 'u-full-width' %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  <% end %>

  <%= f.submit "Inloggen", class: 'button button-primary' %>

<% end %>

<%= render "devise/shared/links" %>
