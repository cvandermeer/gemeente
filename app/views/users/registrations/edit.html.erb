<%= render 'shared/dashboard_menu' %>

<div class='inner'>
  <div class='container'>
    <div class='row'>
      <div class='columns three'>

        <%= render 'users/panels/user_image_panel', user: current_user %>
        <%# render 'users/panels/fast_links_panel', user: current_user %>

        <div class='panel'>
          <div class='panel-header'>
            <h5>Account verwijderen</h5>
          </div>
          <div class='panel-body'>
            <p>Uw account permanent verwijderen? <%= link_to "Verwijder mijn account",
                                               registration_path(resource_name),
                                               data: { confirm: "Weet je het zeker?" },
                                               method: :delete %></p>
          </div>
        </div>
      </div>
      <div class='columns nine'>
        <div class='panel'>
          <div class='panel-header'>
            <h5>Profiel aanpassen</h5>
          </div>

          <div class='panel-body'>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
              <%= devise_error_messages! %>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :name, 'Voor en achternaam' %>
                </div>
                <div class='columns nine icon person'>
                  <%= f.text_field :name, autofocus: true, placeholder: 'Voor en achternaam', class: 'u-full-width' %>
                </div>
              </div>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :email, 'Email adres' %>
                </div>
                <div class='columns nine email icon'>
                  <%= f.email_field :email, placeholder: 'Email adres', class: 'u-full-width' %>
                </div>
              </div>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :avatar, 'Profiel foto' %>
                </div>
                <div class='columns nine'>
                  <%= f.file_field :avatar %>
                </div>
              </div>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :address, 'Straat + huisnummer' %>
                </div>
                <div class='columns five icon house'>
                  <%= f.text_field :street, placeholder: 'Straat', class: 'u-full-width' %>
                </div>
                <div class='columns two'>
                  <%= f.text_field :housenumber, placeholder: 'Huisnummer', class: 'u-full-width' %>
                </div>
              </div>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :town, 'Plaats' %>
                </div>
                <div class='columns six icon city'>
                  <%= f.text_field :town, placeholder: 'Plaatsnaam', class: 'u-full-width' %>
                </div>
              </div>
              <div class='row'>
                <div class='columns three'>
                  <%= f.label :get_mail, 'Email ontvangen' %>
                </div>
                <div class='columns nine'>
                  <%= f.check_box :get_mail %>
                </div>
              </div>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <div class='row'>
                <%= f.submit 'Profiel aanpassen', class: ' button-primary pull-right' %>
              </div>
            </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
