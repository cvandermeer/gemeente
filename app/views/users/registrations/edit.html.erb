<%= render 'shared/dashboard_menu' %>

<div class='inner'>
  <div class='container'>
    <div class='row'>
      <div class='columns four'>
        <ul>
          <li>
            <%= link_to 'Profiel', user_path(current_user) %>
          </li>
          <li>
            <%= link_to 'Profiel bewerken', edit_user_registration_path %>
          </li>
          <li>
            <%= link_to 'Accountinstellingen', nil %>
          </li>
        </ul>
      </div>
      <div class='columns eight form-wrapper'>
        <h5>Profiel aanpassen</h5>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
          <%= devise_error_messages! %>
          <div class='row'>
            <div class='columns six'>
              <%= f.label :name, 'Voor en achternaam' %>
              <%= f.text_field :name, placeholder: 'Voor en achternaam' %>
            </div>
            <div class='columns six'>
              <%= f.label :email, 'Email adres' %>
              <%= f.email_field :email, autofocus: true, placeholder: 'Email adres' %>`
            </div>
          </div>
          <div class='row'>
            <%= f.label :avatar, 'Profiel foto' %>
            <%= f.file_field :avatar %>
          </div>
          <div class='row'>
            <div class='columns six'>
              <%= f.label :address, 'Straat + huisnummer' %>
              <%= f.text_field :address, placeholder: 'Straat + huisnummer' %>
            </div>
            <div class='columns six'>
              <%= f.label :town, 'Plaats' %>
              <%= f.text_field :town, placeholder: 'Plaatsnaam' %>
            </div>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class='row'>
            <%= f.submit 'Profiel aanpassen' %>
          </div>
        <% end %>
      </div>
    </div>

    <h3>Account verwijderen</h3>

    <p>Uw acount perminet verwijderen? <%= button_to "Verwijder mijn account", registration_path(resource_name), data: { confirm: "Weet je het zeker?" }, method: :delete %></p>
  </div>
</div>
